@using EntityLayer.Concrete
@model List<Category>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Details</th>
        <th>Delete</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryID</td>
            <td>@x.CategoryName</td>
            <td>@x.CategoryStatus</td>
            <td><a href="/Category/CategoryDelete/@x.CategoryID" class="btn btn-primary">Details</a></td>
            <td><a href="/Category/CategoryGet/@x.CategoryID" class="btn btn-danger">Delete</a></td>

        </tr>
    }
</table>