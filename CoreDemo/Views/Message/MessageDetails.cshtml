@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>MessageDetails</h1>

    @Html.Label("Message ID")
@Html.TextBoxFor(x=>x.MessageID, new {@class="form-control",@readonly="readonly"})
    <br />
    @Html.Label("Message Title")
@Html.TextBoxFor(x=>x.Subject, new {@class="form-control",@readonly="readonly"})
    <br />
    @Html.Label("Message Details")
@Html.TextAreaFor(x=>x.MessageDetails, new {@class="form-control",@readonly="readonly"})
    <br />
   
    <button class="btn btn-success">New</button>
