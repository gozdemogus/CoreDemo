@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Receiver</th>
        <th>Date</th>
        <th>Open Details</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.WriterName</td>
            <td> @(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>

            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Open</a></td>

        </tr>
    }
</table>
<a href="/Message/SendMessage/" class="btn btn-primary">New</a>