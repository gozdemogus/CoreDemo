@using EntityLayer.Concrete
@model List<Blog>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="tech-btm">
	<h3>Latest Posts</h3>
	@foreach (var item in Model)
	{
	<div class="blog-grids row mb-3">
		<div class="col-md-5 blog-grid-left">
			<a href="/Blog/BlogReadAll/@item.BlogID">
				<img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
			</a>
		</div>
		<div class="col-md-7 blog-grid-right">

			<h5>
					@if(item.BlogContent.Length>=30){
						<a href="/Blog/BlogReadAll/@item.BlogID">
							@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 30).LastIndexOf(" ")) ...
						</a>
					}else{
						<a href="/Blog/BlogReadAll/@item.BlogID">
							@item.BlogContent
						</a>
					}
			
			</h5>
			<div class="sub-meta">
				<span>
					<i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
				</span>
			</div>
		</div>
	</div>
	}
</div>